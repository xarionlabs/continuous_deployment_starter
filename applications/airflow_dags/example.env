# Shopify GraphQL Client Configuration
# Copy this file to .env and update with your actual values

# Shopify Store Configuration
SHOPIFY_STORE_URL=https://your-store.myshopify.com
SHOPIFY_ACCESS_TOKEN=your-shopify-access-token-here
SHOPIFY_API_VERSION=2024-01

# Database Configuration
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DATABASE=pxy6
POSTGRES_USER=pxy6_airflow
POSTGRES_PASSWORD=your-database-password-here

# Database Connection Pool Settings
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=10
DB_COMMAND_TIMEOUT=60

# Testing Configuration
SKIP_LIVE_TESTS=false

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Optional: Performance Settings
RATE_LIMIT_BUFFER=50
MAX_RETRIES=3
REQUEST_TIMEOUT=30

# Optional: Batch Processing Settings
DEFAULT_BATCH_SIZE=50
MAX_CONCURRENT_REQUESTS=5