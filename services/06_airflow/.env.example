# Apache Airflow Google OAuth Configuration
# Copy this file to .env and fill in your values

# Google OAuth2 Client ID from Google Cloud Console
# Format: your-project-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Google OAuth2 Client Secret from Google Cloud Console
# This should be stored as a Docker secret in production
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret

# Optional: Comma-separated list of email domains to allow
# If empty, all domains are allowed
# Example: yourcompany.com,anotherdomain.com
GOOGLE_OAUTH_DOMAIN_WHITELIST=

# Airflow Virtual Host (used by nginx proxy)
AIRFLOW_WEB_VIRTUAL_HOST=airflow.yourdomain.com

# Airflow Admin User Configuration
_AIRFLOW_WWW_USER_USERNAME=admin
_AIRFLOW_WWW_USER_PASSWORD=your-secure-password

# Optional: Airflow Project Directory (defaults to current directory)
# AIRFLOW_PROJ_DIR=/path/to/airflow/project

# Optional: Airflow UID (defaults to 50000)
# AIRFLOW_UID=50000